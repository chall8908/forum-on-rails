<h1>Listing ranks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Min posts</th>
    <th>Custom</th>
    <th>Color</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ranks.each do |rank| %>
  <tr>
    <td><%= rank.name %></td>
    <td><%= rank.min_posts %></td>
    <td><%= rank.custom %></td>
    <td><%= rank.color %></td>
    <td><%= rank.image %></td>
    <td><%= link_to 'Show', rank %></td>
    <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
    <td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

