%h2.page-header Listing users

#main-content
  %table
    %tr
      %th Name
      %th Rank
      %th Password hash
      %th Salt
      %th{colspan: "3"}

    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.rank
        %td= user.password
        %td= user.salt
        %td= link_to 'Show', admin_user_path(user)
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br/

  = link_to 'New User', new_user_path
